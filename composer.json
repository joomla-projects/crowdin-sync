{
    "name": "joomla/crowdin-sync",
    "type": "library",
    "description": "CLI application to synchronize a project with Crowdin",
    "keywords": ["joomla", "crowdin"],
    "homepage": "https://github.com/joomla-projects/crowdin-sync",
    "license": "GPL-2.0+",
    "require": {
        "php": "~7.0",
        "ext-simplexml": "*",
        "joomla/application": "~2.0",
        "joomla/console": "~2.0",
        "joomla/di": "~1.5|~2.0",
        "joomla/event": "~2.0",
        "joomla/registry": "~1.5|~2.0",
        "elkuku/crowdin-api": "~1.0",
        "symfony/yaml": "~3.4|~4.0"
    },
    "require-dev": {},
    "autoload": {
        "psr-4": {
            "Joomla\\Crowdin\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["bin/crowdin"]
}
