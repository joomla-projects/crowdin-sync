{
    "name": "joomla/crowdin-sync",
    "type": "library",
    "description": "CLI application to synchronize a project with Crowdin",
    "keywords": ["joomla", "crowdin"],
    "homepage": "https://github.com/joomla-projects/crowdin-sync",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": "^7.2",
        "ext-simplexml": "*",
        "joomla/application": "^2.0",
        "joomla/console": "^2.0",
        "joomla/di": "^1.5|^2.0",
        "joomla/event": "^2.0",
        "joomla/registry": "^1.5|^2.0",
        "elkuku/crowdin-api": "^2.0",
        "symfony/yaml": "^3.4|^4.0"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5",
        "joomla/coding-standards": "^3.0",
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^8.3.5"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\Crowdin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Joomla\\Crowdin\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["bin/crowdin"]
}
